@using PracTest.Client.Components
<EditForm Model="@tasks" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled ="@Disabled">


        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@tasks.Name" class="form-control" />
                <ValidationMessage For="@(() => tasks.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@tasks.HexCode" class="form-control" />
                <ValidationMessage For="@(() => tasks.Name)" />
            </div>
        </div>


        
     

      
    </fieldset>


    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="tasks" />

</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Colour? tasks{ get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}